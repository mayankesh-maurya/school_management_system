<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<p><b>School:</b><span><%= @school.name %></span></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Show', school_course_path(@school, course) %></td>
        <td><%= link_to 'Edit', edit_school_course_path(@school, course) %></td>
        <td><%= link_to 'Destroy', school_course_path(@school, course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Batches', school_course_batches_path(@school, course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_school_course_path %></br>
<%= link_to 'Back', schools_url %>

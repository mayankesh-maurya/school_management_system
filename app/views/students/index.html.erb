<p id="notice"><%= notice %></p>

<h1>Students</h1>

<p><b>School:</b><span><%= @school.name %></span></p>
<p><b>Course:</b><span><%= @course.name %></span></p>
<p><b>Batch:</b><span><%= @batch.name %></span></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>Approve/Deny</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.status %></td>
        <td>
          <% if student.status == "pending" %>
            <%= link_to "Approve", approve_school_course_batch_student_path(@school, @course, @batch, student), method: :patch %> /
            <%= link_to "Deny", deny_school_course_batch_student_path(@school, @course, @batch, student), method: :patch %>
          <% else %>
            <b>Action Taken</b>
          <% end %>
        </td>
        <td><%= link_to 'Show', school_course_batch_student_path(@school, @course, @batch, student) %></td>
        <td><%= link_to 'Edit', edit_school_course_batch_student_path(@school, @course, @batch, student) %></td>
        <td><%= link_to 'Destroy', school_course_batch_student_path(@school, @course, @batch, student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_school_course_batch_student_path %> <br/>
<%= link_to 'Back', school_course_batches_url(@school, @course) %>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "students/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :school %><br />
    <%= f.collection_select :school_id, School.all, :id, :name, prompt: "Select School" %>
  </div>

  <div class="field">
    <%= f.label :course %><br />
    <%= f.grouped_collection_select :course_id, School.all, :courses, :name, :id, :name, prompt: "Select Course" %>
  </div>

  <div class="field">
    <%= f.label :batch %><br />
    <%= f.grouped_collection_select :batch_id, Course.all, :batches, :name, :id, :name, { prompt: true }, { class: 'form-control' } %>

    <%#= f.collection_select :batch_id, Batch.all, :id, :name, prompt: "Select Batch" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "students/shared/links" %>
